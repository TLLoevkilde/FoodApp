@model IEnumerable<FoodApp.UI.Models.DTO.FoodItemDto> // Model being sent from Index action method in Frontend controller


@{
}

<h1 class="mt-3">Food items</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var foodItem in Model)
        {
            <tr>
                <td>@foodItem.Name</td>
                <td>@foodItem.Price</td>
                <td>@foodItem.Score</td>
            </tr>
        }
    </tbody>

</table>