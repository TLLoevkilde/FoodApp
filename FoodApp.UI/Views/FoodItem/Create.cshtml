@model FoodApp.UI.Models.DTO.CreateFoodItemDto

<h2>Create Food Item</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Protein Per Hundred Grams</label>
        <input type="number" class="form-control" asp-for="ProteinPerHundredGrams" step="0.1" />
    </div>

    <div class="mt-3">
        <label class="form-label">Calories Per Hundred Grams</label>
        <input type="number" class="form-control" asp-for="CalPerHundredGrams" step="0.1" />
    </div>

    <div class="mt-3">
        <label class="form-label">Weight In Grams</label>
        <input type="number" class="form-control" asp-for="WeightInGrams" step="0.1" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" step="0.01" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>
